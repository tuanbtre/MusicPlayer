<com.example.ducph.musicplayer.ui.smartTab.SmartTabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_pager_tab"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:stl_customTabTextLayoutId="@layout/custom_tab_text"
    app:stl_customTabTextViewId="@id/tab_text"
    app:stl_defaultTabTextColor="@android:color/black"
    app:stl_defaultTabTextHorizontalPadding="24dp"
    app:stl_defaultTabTextSize="15sp"
    app:stl_distributeEvenly="false"
    app:stl_dividerColor="@android:color/transparent"
    app:stl_indicatorColor="@color/primaryColor"
    app:stl_indicatorInterpolation="smart"
    app:stl_indicatorThickness="3dp"
 />
